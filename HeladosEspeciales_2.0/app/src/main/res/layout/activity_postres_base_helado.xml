<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.erick.heladosespeciales.sesion">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/banner2"
                android:layout_width="fill_parent"
                android:layout_height="180dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="POSTRES A BASE DE HELADOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/boton2"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="15dp"
                android:theme="@style/boton"
                android:text="EMPEZAR"
                android:onClick="TiposHelados"
                android:drawableTop= "@drawable/ic_registrar" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:theme="@style/boton"
                android:onClick="FaceBook"
                android:drawableTop= "@drawable/facebook_64"/>
            <Button
                android:id="@+id/boton4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:theme="@style/boton"
                android:onClick="Twitter"
                android:drawableTop="@drawable/twitter_48"/>
            <!--
            <Button
                android:id="@+id/boton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:theme="@style/boton"
                android:drawableTop="@drawable/thumb_up_48"/>
                -->
        </LinearLayout>

    </LinearLayout>

</ScrollView>
